@model Domain.ViewModels.CheckoutViewModel

<section class="checkout">
    <div class="container checkout-container">
        <form id="checkout-form" class="checkout-form" method="post" action="/Home/PlaceOrder">
            <!-- Left Side: Delivery Address and Coupon Code -->
            <div class="left-section">
                <div class="address">
                    <h2>Delivery Address</h2>
                    <div class="inputs">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" placeholder="Enter your Email" required>

                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" placeholder="Enter your name" pattern="[A-Za-z\s]+" title="Name should only contain letters and spaces" required>

                        <label for="address">Address</label>
                        <input type="text" id="address" name="address" placeholder="Enter your address" required>

                        <label for="phone">Phone</label>
                        <input type="text" id="phone" name="phone" placeholder="Enter your phone" pattern="\d{10,15}" title="Phone number should be between 10 and 15 digits" required>
                    </div>
                </div>
                <div class="coupon">
                    <h2>Coupon Code</h2>
                    <div class="inputs">
                        <label for="coupon">Coupon Code</label>
                        <input type="text" id="coupon" name="coupon" placeholder="Enter your coupon code">
                    </div>
                </div>
            </div>
            <!-- Right Side: Order Summary with Place Order Button -->
            <div class="ordersummary">
                <h1>Order Summary</h1>
                <div class="items">
                    @foreach (var item in Model.CartItems)
                    {
                            <div class="item_cart">
                                <img src="@Url.Content(item.Image)" alt="@item.ProductName">
                                <div class="content">
                                    <h4>@item.ProductName</h4>
                                    <p class="price_cart">Price: <span>$@item.Price</span></p>
                                    <p>Qty: @item.Qty</p>
                                    <p>Total: <span>$@((item.Price * item.Qty).ToString("F2"))</span></p>
                                </div>
                            </div>
                    }

                    <div class="total">
                        <p>Total</p>
                        <span>$@Model.Total.ToString("F2")</span>
                    </div>

                    <div class="button_div">
                        <button type="submit">Place Order</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
