@model Domain.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="h5 mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
            </h2>
        </div>
        <div class="card-body">
            <h3 class="h4 text-danger mb-4">Are you sure you want to delete this category?</h3>

            <div class="alert alert-warning">
                <i class="fas fa-exclamation-circle me-2"></i>
                <strong>Warning:</strong> This will permanently delete the category and all associated products.
            </div>

            <div class="row">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <div class="col-md-4 mb-3">
                        <div class="border p-2 rounded">
                            <img src="@Model.Image" alt="@Model.Name" class="img-fluid rounded" />
                        </div>
                    </div>
                }
                <div class="@(!string.IsNullOrEmpty(Model.Image) ? "col-md-8" : "col-md-12")">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <tbody>
                                <tr>
                                    <th width="30%">@Html.DisplayNameFor(model => model.Name)</th>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Description))
                                        {
                                            @Html.DisplayFor(model => model.Description)
                                        }
                                        else
                                        {
                                            <span class="text-muted">No description</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Image URL</th>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Image))
                                        {
                                            <a href="@Model.Image" target="_blank" class="text-truncate d-inline-block" style="max-width: 300px;">
                                                @Model.Image
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No image</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
        }

        th {
            font-weight: 500;
            color: #6c757d;
        }

        tr:not(:last-child) {
            border-bottom: 1px solid #eee;
        }

        .alert-warning {
            border-left: 4px solid #ffc107;
        }
    </style>
}