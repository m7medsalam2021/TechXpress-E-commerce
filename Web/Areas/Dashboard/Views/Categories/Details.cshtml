@model Domain.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold">
            <i class="fas fa-tag me-2"></i>@Model.Name
        </h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                <i class="fas fa-edit me-1"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="row g-0">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <div class="col-md-4 border-end">
                    <div class="p-3 text-center">
                        <img src="@Model.Image" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px;" />
                    </div>
                </div>
            }
            <div class="@(!string.IsNullOrEmpty(Model.Image) ? "col-md-8" : "col-md-12")">
                <div class="card-body">
                    <h3 class="card-title mb-4">Category Information</h3>

                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th width="30%">@Html.DisplayNameFor(model => model.Name)</th>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Description))
                                        {
                                            @Html.DisplayFor(model => model.Description)
                                        }
                                        else
                                        {
                                            <span class="text-muted">No description available</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Image</th>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Image))
                                        {
                                            <a href="@Model.Image" target="_blank" class="text-truncate d-inline-block" style="max-width: 300px;">
                                                @Model.Image
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No image</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            overflow: hidden;
        }

        th {
            font-weight: 500;
            color: #6c757d;
            vertical-align: top;
            padding-top: 1rem;
        }

        td {
            padding-top: 1rem;
        }

        tr:not(:last-child) {
            border-bottom: 1px solid #eee;
        }

        .fa-tag {
            color: #6c757d;
        }
    </style>
}