@model Domain.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container py-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="h5 mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
            </h2>
        </div>
        <div class="card-body">
            <h3 class="h4 text-danger mb-4">Are you sure you want to delete this product?</h3>

            <div class="alert alert-warning">
                <i class="fas fa-exclamation-circle me-2"></i>This action cannot be undone. All product information will be permanently deleted.
            </div>

            <div class="row mb-4">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <div class="col-md-4 mb-3 mb-md-0">
                        <div class="border p-2 rounded">
                            <img src="@Model.Image" alt="@Model.Name" class="img-fluid rounded" />
                        </div>
                    </div>
                }
                <div class="@(string.IsNullOrEmpty(Model.Image) ? "col-md-12" : "col-md-8")">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <tbody>
                                <tr>
                                    <th width="30%">@Html.DisplayNameFor(model => model.Name)</th>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                                    <td>@Html.DisplayFor(model => model.Description)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                                    <td>@Html.DisplayFor(model => model.Price)</td>
                                </tr>
                                <!-- إضافة سطر لعرض الفئة -->
                                <tr>
                                    <th>Category</th>
                                    <td>
                                        @if (Model.Category != null)
                                        {
                                            @Model.Category.Name
                                        }
                                        else
                                        {
                                            <span class="text-muted">No category assigned</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>